flavor = [
    "vanilla", 
    "chocolate", 
    "strawberry", 
    "cookies n' cream", 
    "bubblegum"]
toppings = [
    "almonds",
    "banana slices",
    "chocolate syrup",
    "caramel syrup",
    "white chocolate chips"]
    
ice_cream = dict(zip(flavor, toppings))

print(ice_cream)

ice_cream["chocolate"] = "blueberries" # change a data inside 

# only adds
ice_cream.update({
    "matcha":
        "ube",
    "pistachios":
        "mango slices"
})

#why can't I use "append?"
# update method is for dictionaries
# append method is for lists
"""ice_cream.append({
    "junaice": 
        "dragon fruit"})"""
        
print(ice_cream)
